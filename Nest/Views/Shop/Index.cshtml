        $("#FilterForm").on("submit", function (event) {
            event.preventDefault();
            var data = $(this).serialize();
            console.log(data)
            $.ajax({
                type: "POST",
                url: "/Shop/Index",
                data: data
            }).done(function (res) {
                console.log(res);
                $(".list-view").html(res)
            });
        });
        
    </script>
